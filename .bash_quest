#!/bin/bash

#load modules
#tmp=`dawn_getmp.sh $0`
#sed -e 's/#.*//g' -e '/^[ \t]*$/d' $HOME/.modules4load >$tmp
#while read m; do module load "$m" ; done <$tmp 
while read m; do module load "$m" ; done < <(sed -e 's/#.*//g' -e '/^[ \t]*$/d' $HOME/.modules4load )
#for BLAS LAPACK
export BLAS=/software/lapack/3.4.0/lib/libblas.a
export LAPACK=/software/lapack/3.4.0/lib/liblapack.a
#for hdf5
export HDF5_DIR=/software/hdf5/1.8.10/


export PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]: \[\033[01;34m\]$(pwd)\[\033[00m\]\n\$ '

#compiliation flags
export PATH=$HOME/bin/ants.bin:$HOME/.linuxbrew/bin:$HOME/bin:$HOME/netpbm/bin:/usr/sbin:$PATH
#export PATH=$HOME/bin/ants.bin:$HOME/bin:$HOME/netpbm/bin:/usr/sbin:$PATH
#export LD_LIBRARY_PATH=$HOME/netpbm/lib/:$HOME/lib/:$HOME/lib64/:$LD_LIBRARY_PATH
export C_INCLUDE_PATH=$HOME/include:$HOME/netpbm/include:$C_INCLUDE_PATH
export LIBRARY_PATH=$HOME/lib:$HOME/netpbm/lib:$LIBRARY_PATH
export PKG_CONFIG_PATH=$HOME/lib/pkgconfig:/usr/share/pkgconfig/:/usr/lib64/pkgconfig/:$PKG_CONFIG_PATH
export MAN_PATH=$HOME/man:$HOME/share/man:$HOME/netpbm/man:$MAN_PATH

#homebrew
#add libcurl support
export PYTHON_LIBRARY=$HOME/.pythonbrew/pythons/Python-2.6.8/lib/libpython2.6.a
export PYTHON_INCLUDE_PATH=$HOME/.pythonbrew/pythons/Python-2.6.8/include/python2.6/
export LDFLAGS=$(tr '\n' ' ' <<eot 
-L$HOME/lib
-L$HOME/.pythonbrew/pythons/Python-2.6.8/lib
-L$HOME/vtk5/lib/vtk-5.10
-L$HOME/.linuxbrew/lib
-L$HOME/.linuxbrew/opt/curl/lib
-L$HOME/.linuxbrew/opt/libpng/lib
-L$HOME/.linuxbrew/opt/zlib/lib
$LDFLAGS
eot
)
export CPPFLAGS=$(tr '\n' ' ' <<eot
-I$HOME/include 
-I$HOME/.pythonbrew/pythons/Python-2.6.8/include/python2.6 
-I$HOME/vtk5/include/vtk-5.10 
-I$HOME/.linuxbrew/include 
-I$HOME/.linuxbrew/opt/curl/include 
-I$HOME/.linuxbrew/opt/libpng/include 
-I$HOME/.linuxbrew/opt/zlib/include 
$CPPFLAGS
eot
)
export LD_LIBRARY_PATH=$(tr -s '\n' ':' <<eot
$HOME/lib/
$HOME/netpbm/lib/
$HOME/.linuxbrew/lib
$HOME/.linuxbrew/opt/curl/lib 
$HOME/.linuxbrew/opt/libpng/lib 
$HOME/.linuxbrew/opt/zlib/lib
$HOME/lib64/
$LD_LIBRARY_PATH
eot
)

export PAGER='most'

#vtk
pathmunge $HOME/vtk/bin
ldPathMunge_many $HOME/vtk/lib/
export PYTHONPATH=$HOME/vtk/lib/:$PYTHONPATH

#export GEM_HOME=$HOME/gems
#export RUBYOPT=rubygems
source /home/xst833/.rvm/scripts/rvm

#default projectID
AllocID=p20394

#for java
module load java
export JAVA_HOME="`dirname $(which java)`/.."

#for phantomjs
export PhantomExamplesDir=$HOME/bak/js/phantomjs-1.9.1-linux-x86_64/examples

